{
  "name": "g3zkp-messenger",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "G3ZKP Messenger - Secure Zero-Knowledge Messaging Platform",
  "author": "G3ZKP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/g3zkp/messenger"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "npm run build && npm run analyze",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "analyze": "npx vite-bundle-analyzer dist",
    "serve": "vite preview --port 4173",
    "electron": "electron .",
    "electron:build": "npm run build && electron-builder",
    "build:web": "npm run build",
    "build:desktop": "npm run build && electron-builder --publish=never",
    "dist": "npm run build:web && npm run build:desktop",
    "package": "npm run build:web",
    "deploy": "npm run build && npm run deploy:web"
  },
  "dependencies": {
    "@chainsafe/libp2p-yamux": "^6.0.0",
    "@g3zkp/core": "workspace:*",
    "@g3zkp/crypto": "workspace:*",
    "@g3zkp/network": "workspace:*",
    "@g3zkp/storage": "workspace:*",
    "@g3zkp/zkp": "workspace:*",
    "@google/genai": "^1.34.0",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.9.1",
    "@libp2p/peer-id": "^4.0.0",
    "@libp2p/tcp": "^9.0.0",
    "@libp2p/websockets": "^8.0.0",
    "@noble/curves": "^1.7.0",
    "@noble/hashes": "^1.5.0",
    "@noble/secp256k1": "^2.2.3",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "buffer": "^6.0.3",
    "circomlib": "^2.0.5",
    "clsx": "^2.1.1",
    "crypto-browserify": "^3.12.1",
    "date-fns": "^4.1.0",
    "eventemitter3": "^5.0.1",
    "framer-motion": "^11.15.0",
    "js-base64": "^3.7.7",
    "libp2p": "^1.2.0",
    "libsodium-wrappers": "^0.7.14",
    "lucide-react": "^0.562.0",
    "process": "^0.11.10",
    "qrcode": "^1.5.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-dropzone": "^14.3.5",
    "react-hook-form": "^7.54.0",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.3",
    "react-router-dom": "^7.1.1",
    "remark-gfm": "^4.0.0",
    "snarkjs": "^0.7.4",
    "socket.io-client": "^4.8.1",
    "stream-browserify": "^3.0.0",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "util": "^0.12.5",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.14.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.16",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-pwa": "^0.21.0",
    "vitest": "^2.1.8"
  },
  "main": "dist-electron/main.js",
  "homepage": "./",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.g3zkp.messenger",
    "productName": "G3ZKP Messenger",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "asar": true,
    "compression": "maximum"
  }
}
